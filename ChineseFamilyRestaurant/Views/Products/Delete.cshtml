@model ChineseFamilyRestaurant.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Confirm Deletion</h3>
            <p class="text-center fw-bold">Are you sure you want to delete this product?</p>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" alt="Default Image" class="img-fluid rounded shadow-sm" />
                    }
                </div>
                <div class="col-md-7">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">$@Model.Price.ToString("0.00")</dd>

                        <dt class="col-sm-4">Stock:</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>

                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
        </div>
    </div>
</div>
